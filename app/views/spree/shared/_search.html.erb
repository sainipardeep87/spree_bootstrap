<% @taxons = @taxon && @taxon.parent ? @taxon.parent.children : Spree::Taxon.roots %>
<%= form_tag spree.products_path, :method => :get,:class => "navbar-form navbar-right" do %>




        <%= select_tag :taxon,options_for_select([[Spree.t(:all_departments), '']] + @taxons.map {|t| [t.name, t.id]}, @taxon ? @taxon.id : params[:taxon]), 'aria-label' => 'Taxon' ,:class=>"form-control"%>




    <div class="form-group">
        <%= search_field_tag :keywords, params[:keywords],:class=>"form-control", :placeholder => Spree.t(:search) %>
    </div>
  <%= submit_tag Spree.t(:search),:class=>"btn btn-default", :name => nil %>
<% end %>




